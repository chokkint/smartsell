<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/qmui_config_color_blue">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/img_nick"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_lens_black_24dp" />

        <TextView
            android:id="@+id/lab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:text="@string/txt_name"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="28dp"
            android:text="普通会员"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            app:srcCompat="@drawable/ic_settings_white_24dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/ic_notifications_white_24dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="70dp"
            android:text="活跃分数"
            android:textColor="@android:color/white" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:layout_marginTop="68dp"
            android:max="100"
            android:progress="66"
            android:progressTint="@android:color/white" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="97dp"
            android:layout_marginBottom="36dp"
            app:srcCompat="@drawable/ic_attach_money_white_24dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="118dp"
            android:layout_marginBottom="40dp"
            android:text="升级VIP会员，只能销售专家随身"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="44dp"
            app:srcCompat="@drawable/ic_view_quilt_black_24dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:text="实名认证" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="133dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:text="MDRT会员认证" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/ic_done_black_24dp" />
        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="105dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/ic_done_all_black_24dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:text="编辑" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />
    </RelativeLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/liner_border"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/view4"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_insert_drive_file_black_24dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="个人主页管理"
                android:textSize="20sp"
                android:gravity="center_vertical|left"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/liner_border"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/view41"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_trending_up_black_24dp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="查看销售业绩报表"
                android:textSize="20sp"
                android:gravity="center_vertical|left"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/liner_border"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/view42"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_event_note_black_24dp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="查看我行动报表"
                android:textSize="20sp"
                android:gravity="center_vertical|left"/>

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/liner_border"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/view43"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_credit_card_black_24dp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="升级VIP会员"
                android:textSize="20sp"
                android:gravity="center_vertical|left"/>

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/liner_border"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/view44"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="设置"
                android:textSize="20sp"
                android:gravity="center_vertical|left"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>